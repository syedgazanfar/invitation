# Development Environment Configuration

# API URL - Local backend server
REACT_APP_API_URL=http://localhost:8000/api/v1

# Public URL - Local frontend
REACT_APP_PUBLIC_URL=http://localhost:3000

# Environment
REACT_APP_ENV=development

# Razorpay Test Keys (Use test keys for development)
# Get these from: https://dashboard.razorpay.com/app/keys
REACT_APP_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# API Timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Max Upload Size (bytes) - 10MB
REACT_APP_MAX_UPLOAD_SIZE=10485760
