# Production Environment Configuration
# Replace these values with your actual production URLs and keys

# API URL - Your production backend API
REACT_APP_API_URL=https://api.yourdomain.com/api/v1

# Public URL - Your production frontend domain
REACT_APP_PUBLIC_URL=https://yourdomain.com

# Environment
REACT_APP_ENV=production

# Razorpay (Payment Gateway) - Replace with your production keys
# Get these from: https://dashboard.razorpay.com/app/keys
REACT_APP_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx

# Google Analytics (Optional) - For tracking user behavior
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry (Optional) - For error tracking in production
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Feature Flags (Optional)
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# API Timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Max Upload Size (bytes) - 10MB
REACT_APP_MAX_UPLOAD_SIZE=10485760
